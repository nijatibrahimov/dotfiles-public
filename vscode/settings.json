// 04.09.2022
// Nijat Ibrahimov
{
	// Fundamentals
	// ####################
	"explorer.compactFolders": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"diffEditor.ignoreTrimWhitespace": false,
	"glassit.alpha": 245,
	"glassit.step": 10,
	"files.autoSaveDelay": 1200,
	"files.defaultLanguage": "html",
	"files.autoSave": "onFocusChange",
	"files.associations": {
		"*.tpl": "html",
		"*.svelte": "html"
	},
	"launch": {
		"configurations": [],
		"compounds": []
	},
	"security.workspace.trust.untrustedFiles": "open",
	"extensions.ignoreRecommendations": true,
	"breadcrumbs.enabled": false,
	// Editor
	// ####################
	"editor.scrollbar.horizontalScrollbarSize": 10,
	"editor.scrollbar.verticalScrollbarSize": 10,
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true,
	"editor.guides.bracketPairs": false,
	"editor.renderWhitespace": "selection",
	"editor.renderLineHighlight": "line",
	"editor.suggestSelection": "first",
	"editor.snippetSuggestions": "top",
	"editor.fastScrollSensitivity": 2,
	"editor.lineNumbers": "relative",
	"editor.mouseWheelScrollSensitivity": 0.5,
	"editor.cursorSmoothCaretAnimation": true,
	"editor.hover.enabled": false,
	"editor.linkedEditing": true,
	"editor.tabSize": 2,
	"editor.minimap.renderCharacters": false,
	"editor.cursorBlinking": "solid",
	"editor.cursorStyle": "line",
	"editor.cursorWidth": 1,
	"editor.wordBasedSuggestionsMode": "allDocuments",
	"editor.semanticHighlighting.enabled": true,
	"editor.stickyTabStops": true,
	"editor.trimAutoWhitespace": true,
	"editor.detectIndentation": false,
	"editor.inlayHints.fontFamily": "Iosevka SS12, DM Mono, Hack Nerd Font, JetBrains Mono, Fira Code, mononoki",
	"editor.fontFamily": "Iosevka SS12",
	"editor.fontSize": 11,
	"editor.lineHeight": 1.25,
	"editor.fontWeight": "400",
	"editor.letterSpacing": 0.05,
	"editor.fontLigatures": true,
	"editor.wordWrap": "off",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.unicodeHighlight.invisibleCharacters": false,
	"editor.minimap.enabled": false,
	"editor.bracketPairColorization.enabled": false,
	"editor.folding": false,
	"editor.insertSpaces": false,
	"editor.formatOnPaste": true,
	"editor.smoothScrolling": true,
	// "editor.formatOnType": true,
	"editor.formatOnSave": true,
	// Terminal
	// ####################
	"terminal.integrated.fontFamily": "Iosevka SS12, Hack Nerd Font, JetBrains Mono, Fira Code, mononoki",
	"terminal.integrated.fontSize": 11,
	"terminal.integrated.lineHeight": 1,
	"terminal.integrated.gpuAcceleration": "off",
	"terminal.integrated.fontWeightBold": "normal",
	"terminal.integrated.defaultProfile.windows": "PowerShell",
	"terminal.integrated.copyOnSelection": true,
	"terminal.integrated.cursorBlinking": false,
	"terminal.integrated.cursorStyle": "block",
	"terminal.integrated.drawBoldTextInBrightColors": false,
	"terminal.integrated.rightClickBehavior": "selectWord",
	"terminal.integrated.defaultProfile.linux": "fish",
	"terminal.integrated.smoothScrolling": true,
	"window.zoomLevel": 2,
	"window.restoreFullscreen": true,
	"window.titleSeparator": " ‚ä∏ ",
	"window.dialogStyle": "custom",

	// Emmet
	// ####################
	"emmet.triggerExpansionOnTab": true,
	"emmet.showExpandedAbbreviation": "never",
	"emmet.showSuggestionsAsSnippets": false,
	"emmet.includeLanguages": {
		"javascript": "javascriptreact",
		"vue-html": "html",
		"php": "html"
	},
	// Git
	// ####################
	"git.autofetch": true,
	"git.confirmSync": false,
	// Prettier
	// ####################
	"prettier.useTabs": true,
	"prettier.tabWidth": 2,
	"prettier.singleQuote": true,
	"prettier.trailingComma": "all",
	"prettier.semi": true,
	"prettier.bracketSameLine": true,
	"prettier.printWidth": 100,
	// ESLint and Languages
	// ####################
	"eslint.packageManager": "npm",
	"eslint.format.enable": true,
	"eslint.alwaysShowStatus": true,
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"html.completion.attributeDefaultValue": "doublequotes",
	"[css]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},
	"[scss]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},
	// ####################
	// JavaScript, TypeScript, JSON
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"javascript.autoClosingTags": true,
	"javascript.suggestionActions.enabled": false,
	"typescript.suggestionActions.enabled": false,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.quickSuggestions": {
			"strings": true
		},
		"editor.suggest.insertMode": "replace",
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"json.schemas": [],
	// ####################
	// Zen mode
	"zenMode.centerLayout": false,
	"zenMode.fullScreen": false,
	"zenMode.hideLineNumbers": false,
	"zenMode.hideStatusBar": false,
	// Vim
	// ####################
	"vim.easymotion": true,
	"vim.autoindent": true,
	"vim.incsearch": true,
	"vim.useSystemClipboard": true,
	"vim.useCtrlKeys": true,
	"vim.hlsearch": true,
	"vim.sneak": true,
	"vim.normalModeKeyBindings": [
		{
			"before": ["<tab>"],
			"commands": ["workbench.action.nextEditor"]
		},
		{
			"before": ["<S-tab>"],
			"commands": ["workbench.action.previousEditor"]
		}
	],
	"vim.insertModeKeyBindings": [
		{
			"before": ["j", "k"],
			"after": ["<Esc>"]
		},
		{
			"before": ["<C-j>"],
			"after": ["<Esc>"]
		}
	],
	"vim.visualModeKeyBindings": [
		{
			"before": ["<leader>", "h"],
			"after": ["_"]
		},
		{
			"before": ["<leader>", "l"],
			"after": ["$"]
		}
	],
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": ["<leader>", "w"],
			"commands": ["workbench.action.splitEditor"]
		},
		{
			"before": ["<leader>", "e"],
			"commands": ["workbench.action.toggleSidebarVisibility"]
		},
		{
			"before": ["<leader>", "f"],
			"commands": ["revealInExplorer"]
		},
		{
			"before": ["<leader>", "h"],
			"after": ["_"]
		},
		{
			"before": ["<leader>", "l"],
			"after": ["$"]
		}
	],
	"vim.leader": "<space>",
	"vim.handleKeys": {
		"<C-a>": false,
		"<C-f>": false,
		"<C-c>": false,
		"<C-x>": false,
		"<C-v>": false,
		"<C-z>": false,
		"<C-y>": false
	},
	// ####################
	// End
	"workbench.editor.showIcons": true,
	"workbench.editor.tabSizing": "shrink",
	"workbench.editor.closeOnFileDelete": true,
	"workbench.startupEditor": "none",
	"workbench.editor.wrapTabs": true,
	"workbench.editor.tabCloseButton": "off",
	"window.menuBarVisibility": "toggle",
	"workbench.layoutControl.enabled": false,
	"workbench.productIconTheme": "material-product-icons",
	"git.enableSmartCommit": true,
	"workbench.colorTheme": "nora-reverse",
	"workbench.iconTheme": "spectrum-vscode-icons",
	"workbench.activityBar.visible": false
}
